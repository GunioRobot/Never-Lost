#!/bin/bash

APP='Never Lost'
PRIORITY=3
MSG=''
ETHIP=$(/sbin/ifconfig en0 | grep 'inet ' | awk '{print $2}')
WIFIP=$(/sbin/ifconfig en1 | grep 'inet ' | awk '{print $2}')
if [ -n "$ETHIP"  ]; then
	MSG="ETH: $ETHIP \n"
fi
if [ -n "$WIFIP"  ]; then
	MSG="$MSG""WIFI: $WIFIP"
fi
if [ -z "$MSG"  ]; then
	MSG='No ip found on interfaces'
fi

if [ $1 = "pb" ]
then
	if [ -z $2 ]
	then
		`echo -e "$MSG" | pbcopy`
	else
		if [ $2 = "eth" ]
		then
			if [ -n "$ETHIP"  ]
			then
				`echo "$ETHIP" | pbcopy`
			else
				echo "ETH Not available"
			fi
		elif [ $2 = "wifi" ]
		then
			if [ -n "$WIFIP"  ]
			then
				`echo "$WIFIP" | pbcopy`
			else
				echo "WIFI Not available"
			fi
		fi
	fi
else
	`/usr/local/bin/growlnotify -s -p $PRIORITY -t "$APP" -m "$(echo -e $MSG)"`
fi